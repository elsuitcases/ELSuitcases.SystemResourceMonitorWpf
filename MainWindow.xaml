<Window x:Class="ELSuitcases.SystemResourceMonitorWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ELSuitcases.SystemResourceMonitorWpf"
        mc:Ignorable="d"
        Title="시스템 리소스 모니터"
        Height="800"
        Width="800"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="250" />
            <RowDefinition Height="10" />
            <RowDefinition Height="150" />
            <RowDefinition Height="10" />
            <RowDefinition Height="150" />
            <RowDefinition Height="10" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Margin="5,0,0,10"
                    VerticalAlignment="Center"
                    Orientation="Vertical">
            <TextBlock x:Name="tbSystemHostName"
                       Text="호스트네임"
                       FontSize="16"
                       FontWeight="Bold" />
            <TextBlock x:Name="tbSystemIP"
                       Text="0.0.0.0"
                       FontSize="14"
                       FontWeight="Normal"
                       Foreground="DimGray" />
        </StackPanel>

        <Border Grid.Row="1"
                Padding="10"
                Background="WhiteSmoke"
                BorderThickness="1"
                BorderBrush="LightSkyBlue"
                CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>                    
                    <RowDefinition Height="100" />
                    <RowDefinition Height="150" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0"
                                VerticalAlignment="Center"
                                Orientation="Vertical">
                        <TextBlock Text="CPU"
                                   FontSize="12"
                                   Foreground="DimGray" />
                        <TextBlock x:Name="tbCpuUsage"
                                   Text="{Binding SystemCounterInfo.CpuUsage, StringFormat={}{0:F2} %}"
                                   FontSize="32"
                                   FontWeight="Bold" />
                    </StackPanel>
                    <StackPanel Grid.Column="1"
                                VerticalAlignment="Center"
                                Orientation="Vertical">
                        <TextBlock Text="메모리"
                                   FontSize="12"
                                   Foreground="DimGray" />
                        <TextBlock x:Name="tbRamUsage"
                                   Text="{Binding SystemCounterInfo.RamUsage, StringFormat={}{0:F2} %}"
                                   FontSize="32"
                                   FontWeight="Bold" />
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Row="0"
                                Grid.Column="0"
                                VerticalAlignment="Top"
                                Orientation="Vertical">
                        <TextBlock Text="MIN"
                                   FontSize="12"
                                   FontWeight="Bold"
                                   Foreground="DimGray" />
                        <TextBlock x:Name="tbCpuMin"
                                   Text="0.00 %"
                                   FontSize="16" />
                        <TextBlock x:Name="tbCpuMinTime"
                                   Text="2025-01-01 00:00:00"
                                   FontSize="12"
                                   Foreground="DimGray" />
                    </StackPanel>
                    <StackPanel Grid.Row="1"
                                Grid.Column="0"
                                VerticalAlignment="Top"
                                Orientation="Vertical">
                        <TextBlock Text="MAX"
                                   FontSize="12"
                                   FontWeight="Bold"
                                   Foreground="DimGray" />
                        <TextBlock x:Name="tbCpuMax"
                                   Text="0.00 %"
                                   FontSize="16" />
                        <TextBlock x:Name="tbCpuMaxTime"
                                   Text="2025-01-01 00:00:00"
                                   FontSize="12"
                                   Foreground="DimGray" />
                    </StackPanel>

                    <StackPanel Grid.Row="0"
                                Grid.Column="1"
                                VerticalAlignment="Top"
                                Orientation="Vertical">
                        <TextBlock Text="MIN"
                                   FontSize="12"
                                   FontWeight="Bold"
                                   Foreground="DimGray" />
                        <TextBlock x:Name="tbRamMin"
                                   Text="0.00 %"
                                   FontSize="16" />
                        <TextBlock x:Name="tbRamMinTime"
                                   Text="2025-01-01 00:00:00"
                                   FontSize="12"
                                   Foreground="DimGray" />
                    </StackPanel>
                    <StackPanel Grid.Row="1"
                                Grid.Column="1"
                                VerticalAlignment="Top"
                                Orientation="Vertical">
                        <TextBlock Text="MAX"
                                   FontSize="12"
                                   FontWeight="Bold"
                                   Foreground="DimGray" />
                        <TextBlock x:Name="tbRamMax"
                                   Text="0.00 %"
                                   FontSize="16" />
                        <TextBlock x:Name="tbRamMaxTime"
                                   Text="2025-01-01 00:00:00"
                                   FontSize="12"
                                   Foreground="DimGray" />
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <Border Grid.Row="3"
                Padding="10"
                Background="WhiteSmoke"
                BorderThickness="1"
                BorderBrush="LightSkyBlue"
                CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Row="0"
                            Grid.Column="0"
                            Grid.RowSpan="2"
                            VerticalAlignment="Center"
                            Orientation="Vertical">
                    <TextBlock Text="GPU"
                               FontSize="12"
                               Foreground="DimGray" />
                    <TextBlock x:Name="tbGpuUsage"
                               Text="{Binding SystemCounterInfo.GpuUsage, StringFormat={}{0:F2} %}"
                               FontSize="32"
                               FontWeight="Bold" />
                </StackPanel>
                <StackPanel Grid.Row="0"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Orientation="Vertical">
                    <TextBlock Text="MIN"
                               FontSize="12"
                               FontWeight="Bold"
                               Foreground="DimGray" />
                    <TextBlock x:Name="tbGpuMin"
                               Text="0.00 %"
                               FontSize="16" />
                    <TextBlock x:Name="tbGpuMinTime"
                               Text="2025-01-01 00:00:00"
                               FontSize="12"
                               Foreground="DimGray" />
                </StackPanel>
                <StackPanel Grid.Row="1"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Orientation="Vertical">
                    <TextBlock Text="MAX"
                               FontSize="12"
                               FontWeight="Bold"
                               Foreground="DimGray" />
                    <TextBlock x:Name="tbGpuMax"
                               Text="0.00 %"
                               FontSize="16" />
                    <TextBlock x:Name="tbGpuMaxTime"
                               Text="2025-01-01 00:00:00"
                               FontSize="12"
                               Foreground="DimGray" />
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="5"
                Padding="10"
                Background="WhiteSmoke"
                BorderThickness="1"
                BorderBrush="LightSkyBlue"
                CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Row="0"
                            Grid.Column="0"
                            Grid.RowSpan="2"
                            VerticalAlignment="Center"
                            Orientation="Vertical">
                    <TextBlock Text="HDD - C"
                               FontSize="12"
                               Foreground="DimGray" />
                    <TextBlock x:Name="tbHddCUsage"
                               Text="{Binding SystemCounterInfo.HddCUsage, StringFormat={}{0:F2} %}"
                               FontSize="32"
                               FontWeight="Bold" />
                </StackPanel>
                <StackPanel Grid.Row="0"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Orientation="Vertical">
                    <TextBlock Text="MIN"
                               FontSize="12"
                               FontWeight="Bold"
                               Foreground="DimGray" />
                    <TextBlock x:Name="tbHddCMin"
                               Text="0.00 %"
                               FontSize="16" />
                    <TextBlock x:Name="tbHddCMinTime"
                               Text="2025-01-01 00:00:00"
                               FontSize="12"
                               Foreground="DimGray" />
                </StackPanel>
                <StackPanel Grid.Row="1"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Orientation="Vertical">
                    <TextBlock Text="MAX"
                               FontSize="12"
                               FontWeight="Bold"
                               Foreground="DimGray" />
                    <TextBlock x:Name="tbHddCMax"
                               Text="0.00 %"
                               FontSize="16" />
                    <TextBlock x:Name="tbHddCMaxTime"
                               Text="2025-01-01 00:00:00"
                               FontSize="12"
                               Foreground="DimGray" />
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="7">
            <StackPanel VerticalAlignment="Center"
                        Orientation="Horizontal">
                <TextBlock Text="업데이트 주기 : "
                           FontWeight="Bold" />
                <TextBox x:Name="txtIntervalUpdateSec"
                         Width="50"
                         TextAlignment="Right" />
                <TextBlock Text=" (초)" />
                <Button x:Name="btnSaveConfig"
                        Margin="15,0,0,0"
                        Width="100"
                        Cursor="Hand"
                        Content="설정 적용"
                        Click="btnSaveConfig_Click" />
            </StackPanel>
        </Grid>
    </Grid>
    
</Window>
